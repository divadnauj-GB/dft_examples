#! /bin/sh -f
#\
mkdir -p logfiles
#\
mkdir -p patterns
#\
exec tessent -shell -log logfiles/$0.log -replace -dofile "$0"


set PDK_ROOT ../../../tech

// ### FAULT SIMULATION TO CREATE THE PATTERN DATABASE

set_context patterns -scan -design_id post_layout 
set_tsdb_output_directory ../tsdb_outdir
open_tsdb ../tsdb_outdir

read_cell_library ${PDK_ROOT}/tessent/ihp-sg13g2_stdcell.tcelllib
read_cell_library ${PDK_ROOT}/tessent/ihp-sg13g2_io.tcelllib

read_cell_library ${PDK_ROOT}/tessent/memories/RM_IHPSG13_1P_256x64_c2_bm_bist.atpglib


read_design croc_soc  -design_id post_layout -verbose
set_current_design croc_soc
add_black_boxes -modules { \
                    RM_IHPSG13_1P_256x64_c2_bm_bist \
             }

# Specify the current mode using a different name than what was used during scan insertion with add_scan_mode command
set_current_mode lbist_SA -type internal
#import the tcd information from pre-layout phase
read_core_description ./croc_soc_int_mode.tcd
# include the scan mode about the scan chains 
import_scan_mode int_mode

#as the layout might ungroup the test instruments, now it is necesary to manually link the instances insode the layout
# design and the original module obtained from the icl description.
set tessent_lbist_inst [get_icl_instances *tessent_lbist_inst]
set tessent_lbist_module [get_icl_modules *tessent_lbist]
add_core_instance -instances [get_name_list $tessent_lbist_inst] -core [get_name_list $tessent_lbist_module]

report_core_descriptions
report_scan_chains

# specify the capture procedure name and the count percentage to repeat the NCP once every 256 patterns
set_lbist_controller_options -capture_procedures {ALL 80 single_pulse 10 double_pulse 10 sti_occ 0 }

set_system_mode analysis

#add_faults and simulate patterns
add_faults -all
set_random_pattern 1024
simulate_patterns -source bist -store_patterns all


write_patterns patterns/croc_soc_lbist_parallel.v -verilog -parallel -replace -parameter_list {SIM_KEEP_PATH 1}
write_tsdb -replace
report_lbist_configuration -hardware_default_compatibility

exit
