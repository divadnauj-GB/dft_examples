vlog patterns/croc_soc_edt_transition_retargeted.v 
vsim -c -voptargs="+acc" croc_chip_top_croc_soc_edt_transition_retargeted_v_ctl -l logfiles/verilog.log_croc_soc_edt_transition_retargeted  -do "if {0} {log -r /*}; run -all"

vlog patterns/croc_soc_edt_transition_retargeted_serial.v 
vsim -c -voptargs="+acc" croc_chip_top_croc_soc_edt_transition_retargeted_serial_v_ctl -l logfiles/verilog.log_croc_soc_edt_transition_retargeted_serial  -do "if {0} {log -r /*}; run -all"



