vlog patterns/croc_chip_top_edt_transition_serial.v
vsim -c -voptargs="+acc" croc_chip_top_croc_chip_top_edt_transition_serial_v_ctl -l logfiles/verilog.log_croc_chip_top_edt_transition_serial -do "if {0} {log -r /*}; run -all"

vlog patterns/croc_soc_edt_stuck_retargeted.v 
vsim -c -voptargs="+acc" croc_chip_top_croc_soc_edt_stuck_retargeted_v_ctl -l logfiles/verilog.log_croc_soc_edt_stuck_retargeted  -do "if {0} {log -r /*}; run -all"

